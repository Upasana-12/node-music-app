<!DOCTYPE html>
<html lang="en">
<head>
	<title>SONGS</title>
	  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">		
	<!-- <link rel="stylesheet" href="BrowseSongscss.css"> -->
	
	<link rel="stylesheet" href="/sidebarcss.css" type="text/css">
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
		
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.0/jquery.min.js"></script>
	<script src="https://code.jquery.com/jquery-3.3.1.js"></script>
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
    
    <style>
            h3{
            font-size: 40px;
            color:  #0c5a41;
            font-family: Franklin Gothic Medium;
        }
       
         #name{
            font-size: 20px;
        } 
    </style>
</head>

<body>
    <div id="viewscreen">
        <% include partials/sidebar %>
        <div id="rightview">
            
            <div class="container">
                <h3>Songs in <%= pobj.name %></h3>
                <div id="list">
                        <% if(pobj.songs.length>0) { %>
                    <% for(var i=0; i<pobj.songs.length; i++) { %>
                        <div class="row">
                            <div class="col-md-2">
                                <img src="/<%= pobj.songs[i].image %>" style="width:76px; height:71px; border-radius: 50%;"></img>
                            </div>
                            <div class="col-md-2">
                                <h2 id="name"><%= pobj.songs[i].songname %></h2>
                            </div>
                            <div class="col-md-5">
                                <audio controls id="audi">
                                       
                                        <source src="/<%= pobj.songs[i].songname %>" type="audio/mp3">
                                        
                                </audio>
                            </div>
                            <div class="col-md-3">
                                <button type="button" id="remove" class="btn btn-danger" onclick="removeFromPlayList('<%= pobj._id %>','<%= pobj.songs[i]._id %>')">Remove Song</button>
                            </div>
                        </div><br/>
                     <% } %>
                     <% } else{ %>  
                        <div><h2><%= pobj.name %> is empty!</h2></div>
                        <% } %>
                </div>
            </div>
    
        </div>
    </div>
</body>
<script src="/sidebarjs.js" type="text/javascript"></script>
<!-- <script src="/plistSongsjs.js" type="text/javascript"></script> -->
</html>